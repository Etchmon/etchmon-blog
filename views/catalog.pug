extends layout 

block content
  .nav 
    if currentUser 
      p Welcome. #{currentUser.username}!
      form(method="POST" action="/api/logout")
        button(type="submit") Logout
  .container 
    if (posts)
      each post in posts 
        .post 
          h1 #{post.title}
          p #{post.date}
          button.delete-post(id=post._id) x
          form(method="GET" action=`/api/posts/${post._id}/edit`)
            button(type="submit") edit
  script(src='/js/scripts.js')